@import 'lib/bootstrap/bootstrap.styl' // bootstrap-stylus
@import 'nib'
@import url(https://fonts.googleapis.com/css?family=Roboto:400,700,500,300);
.container
  margin-top 60px

h2
  smooth-button()
  width: 90%
  font-size: 2em

h3
  margin-top: 20px
pre
  font-family: courier
  background-color: rgba(0,0,0,.8)
  color: yellow
  width: 100%
  margin-bottom: 20px
  padding: 10px
  border: 1px solid black

li.torrent
  border-radius: 5px
  padding: 25px
  background-color: #E6E6EA
  font-family: Roboto, Ubuntu, Arial
  font-size: 16px
  list-style-type: none
  font-weight: bold
  &.validated
    background-color: #D1FCDD
  span
    margin 5px
  .name
    margin: 5px
  .path
    color: #6E7084

  div
    font-weight: normal
    margin: 15px 5px 15px 15px
    a
      margin-left: 5px
      text-transform: capitalize
